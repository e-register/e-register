<h1>Edit <%= @klass.name %> <small><%= @klass.detail %></small></h1>
<div class="col-md-6">
  <%= form_for @klass do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :detail %>
        <%= f.text_field :detail, class: 'form-control' %>
      </div>
      <%= f.submit 'Update', class: ['btn', 'btn-success'] %>
  <% end %>
</div>
