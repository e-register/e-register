<h1>New Presence</h1>
<h2><%= @klass.name %> <small><%= @klass.detail %></small></h2>
<div class="col-md-6">
  <%= form_for @presence, url: klass_presences_path(@klass) do |f| %>
    <%= render 'form', f: f %>
    <div class="form-group">
      <%= f.submit 'Create', class: ['btn', 'btn-success'] %>
    </div>
  <% end %>
</div>
