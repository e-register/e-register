<div class="page-header">
  <h1>
    <%= @user.full_name %>
    <span class="label label-default"><%= @user.user_group.name %></span>
    <% if @user == current_user %>
        <span class="label label-success">You</span>
    <% end %>
  </h1>
</div>

<h2>Classes</h2>
<% if @klasses.any? %>
  <ul>
  <% @klasses.each do |klass| %>
    <li><%= render 'partials/klass_li', klass: klass %></li>
  <% end %>
  </ul>
<% else %>
  <em>This user has no class</em>
<% end %>
