<div class="row">
  <% flash.each do |name, msg| %>
    <div class="col-md-6">
      <div class="flash alert alert-<%= name == 'alert' ? 'danger' : 'success' %>">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= msg %> (<%= name %>)
      </div>
    </div>
  <% end %>
</div>
