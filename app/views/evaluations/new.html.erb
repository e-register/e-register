<h1>Add an evaluation</h1>
<div class="col-md-6">
  <%= form_for @evaluation do |f| %>
      <div class="form-group">
          <%= f.label :class %>
          <%= text_field_tag '', @teacher.klass.name, class: 'form-control', disabled: true %>
      </div>
      <div class="form-group">
          <%= f.label :subject %>
          <%= text_field_tag '', @teacher.subject.name, class: 'form-control', disabled: true %>
      </div>
      <div class="form-group">
          <%= f.label :student %>
          <%= f.select :student, @students, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :date %>
          <%= text_field_tag 'evaluation[date]', format_date(@evaluation.date), class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :score %>
          <%= f.text_field :score, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.label :type %>
          <br>
          <div class="btn-group" data-toggle="buttons">
              <% @types.each_with_index do |type, i| %>
                  <label class="btn btn-default <%= 'active' if i == 0 %>">
                      <%= radio_button_tag 'evaluation[evaluation_type_id]', type.id, checked: i == 0 %>
                      <%= type.name %>
                  </label>
              <% end %>
          </div>
      </div>
      <div class="form-group">
        <%= f.check_box :visible %>
        <%= f.label :visible %>
      </div>
      <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
      </div>
      <%= f.hidden_field :score_id %>
      <%= f.hidden_field :teacher_id %>
      <%= f.submit 'Create', class: ['btn', 'btn-success'] %>
  <% end %>
</div>

<%= render 'modal', scores: @scores %>
